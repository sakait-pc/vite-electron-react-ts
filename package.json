{
  "name": "vite-electron-react-ts",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=20.19.1"
  },
  "main": "main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "vite build && tsc -p src/electron && electron-builder --win --x64",
    "clean": "rm -rf dist main out",
    "preview": "vite preview",
    "server:vite": "vite",
    "server:electron": "chcp 65001 && tsc -p src/electron && electron .",
    "start": "run-p server:*"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "34.5.6",
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.6.4",
    "vite": "^5.4.19"
  },
  "build": {
    "appId": "com.electron.viteElectronReact",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "main",
      "out",
      "package.json",
      "package-lock.json"
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
